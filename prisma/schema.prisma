generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  // PII: Personally Identifiable Information - requires masking in logs
  email     String  @unique // PII
  password  String // Sensitive - never log
  firstName String? // PII
  lastName  String? // PII

  loginSource  String  @default("default")
  authorizerId String?

  verified         Boolean
  isForgetPassword Boolean

  mfaEnabled         Boolean   @default(false) // Track if MFA is enabled
  failedOtpAttempts  Int       @default(0) // Track failed OTP attempts
  accountLockedUntil DateTime? // If account gets locked due to too many failed attempts

  lastActivityAt DateTime? // to track last active time of a user

  logoutPin String // Store the 6-digit logout PIN

  // Soft delete: deletedAt field for soft delete pattern
  deletedAt DateTime? // NULL = active, non-NULL = soft deleted

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Note: Unique constraint on email is enforced via partial unique index
  // that ignores soft-deleted rows: CREATE UNIQUE INDEX ... WHERE deletedAt IS NULL
  // This allows reusing emails after soft deletion while maintaining uniqueness for active users
  @@map("users")
}

